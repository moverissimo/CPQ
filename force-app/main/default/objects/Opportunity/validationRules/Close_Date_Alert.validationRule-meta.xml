<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Close_Date_Alert</fullName>
    <active>true</active>
    <errorConditionFormula>And ( NOT(IsClosed = TRUE),  CloseDate &lt; TODAY() 
        
     )</errorConditionFormula>
    <errorMessage>The close date must be today or later</errorMessage>
</ValidationRule>
